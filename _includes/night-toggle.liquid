<label class="night-toggle">

  <input id="night-mode" type="checkbox">

  <button>
    <div class="toggle">
      <span>☀️</span>
      <span>🌙</span>
    </div>
  </button>

  <script>
    const inp = document.getElementById('night-mode');
    inp.checked = initialNight;

    inp.onchange = function() {
      document.documentElement.classList.toggle('night');
      localStorage.setItem('night', document.documentElement.classList.contains('night'));
    }
  </script>

</label>
